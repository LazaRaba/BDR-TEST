{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.1/dist/litera/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.1/dist/litera/variables.min.css">
    <link rel="stylesheet" href="assets/parents/parents.css">
{% endblock %}
{# {% include "partials/head.php" %}  #}

{% block content %}


{# -------------------------Mes information--------------------- #}
<h1 id="titre-vert" class="text-center mt-5">Bonjour {{ user.nom }} {{ user.prenom }} </h1>
    <table class="table-responsive container table table-hover">
    <h2 id="titre-info" class="text-center mt-5 container pt-2 pb-2">Mes informations</h2>
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Email</th>
                <th>Anniversaire</th>
                <th>Début Contrat</th>
                <th>Taux horaires</th>
                <th>Heures/semaine</th>
                <th>Année Complete</th>
            </tr>
        </thead>

        <tbody>
            <tr class="table-active">
                <td data-label="nom">{{ user.nom }}</td>
                <td data-label="Prénom">{{ user.prenom }}</td>
                <td data-label="Email">{{ user.email }}</td>
                <td data-label="Anniversaire">{{ user.anniversaire |date("d/m/Y") }}</td>
                <td data-label="Début contrat">{{ user.debutContrat |date("d/m/Y") }}</td>
                <td data-label="Taux horaires">{{ user.tauxHoraire }}</td>
                <td data-label="Heure semaine">{{ user.heuresSemaine }}</td>
                <td data-label="Annéé complete">{{ user.anneeComplete }}</td>
            </tr>
        </tbody>
    </table>

{# -------------------------Ma nounou--------------------- #}
<table class="table-responsive container table table-hover">
    <h2 id="titre-info" class="text-center mt-5 container pt-2 pb-2">Ma Nounou</h2>
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Sécurité sociale</th>
                <th>Paje emploi</th>
                <th>Agrément</th>
                <th>Date fin agrément</th>
            </tr>
        </thead>

        <tbody>
            <tr class="table-active">
                <td data-label="nom">{{ user.nom }}</td>
                <td data-label="Prénom">{{ user.prenom }}</td>
                <td data-label="Sécu-sociale">{{ user.anniversaire |date("d/m/Y") }}</td>
                <td data-label="Paje emploi">{{ user.debutContrat |date("d/m/Y") }}</td>
                <td data-label="Agrément">{{ user.email }}</td>
                <td data-label="Date fin">{{ user.tauxHoraire }}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}

